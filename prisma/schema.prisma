// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id              Int       @id @unique @default(autoincrement())
  name            String
  email           String    @unique
  password        String
  address         String
  district        String
  city            String
  state           String
  zip_code        String
  document_number Int       @unique
  issuer          String
  date_of_birth   DateTime
  cel_phone       String
  profession      String
  income          Float
  civil_status    String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime?
  account         Account?

  @@map("clients")
}

model Account {
  id             Int           @id @unique @default(autoincrement())
  client_id      Int           @unique
  holder         String
  agency         Int
  account_number Int
  balance        Float
  account_status Int
  createdAt      DateTime      @default(now())
  updatedAt      DateTime?
  transactions   Transaction[]
  client         Client        @relation(fields: [client_id], references: [id])

  @@map("accounts")
}

model Transaction {
  id         Int      @id @unique @default(autoincrement())
  account_id Int      @unique
  value      Float
  date       DateTime
  type       String
  account    Account  @relation(fields: [account_id], references: [id])

  @@map("transactions")
}
